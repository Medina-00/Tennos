@model IEnumerable<Tennos_Prueba.core.Domain.Entidades.Productos>

@{
    ViewData["Title"] = "Index";
}

<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center">
        <h1>PRODUCTOS</h1>
        <a asp-action="Create" class="btn btn-outline-info">Create New</a>
    </div>
</div>

<div class="container my-5">
    <div class="row justify-content-center">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card bg-dark text-white">
                    <div class="card-body">
                        <h5 class="card-title">@Html.DisplayFor(modelItem => item.Nombre)</h5>
                        <p class="card-text">
                            <strong>Producto ID:</strong> @Html.DisplayFor(modelItem => item.ProductoID) <br>
                            <strong>Precio:</strong> @Html.DisplayFor(modelItem => item.Precio) <br>
                            <strong>Fecha de Creación:</strong> @Html.DisplayFor(modelItem => item.FechaCreacion)
                        </p>
                        <div class="d-flex justify-content-between">
                            @Html.ActionLink("Editar", "Edit", new { id = item.ProductoID }, new { @class = "btn btn-primary btn-sm" }) |
                            @Html.ActionLink("Detalles", "Details", new { id = item.ProductoID }, new { @class = "btn btn-info btn-sm" }) |
                            @Html.ActionLink("Eliminar", "Delete", new { id = item.ProductoID }, new { @class = "btn btn-danger btn-sm" })
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
