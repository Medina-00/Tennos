@model Tennos_Prueba.core.Domain.Entidades.Productos

@{
    ViewData["Title"] = "Edit";
}

<div class="container my-5">
    <div class="d-flex justify-content-center align-items-center">
        <div class="col-md-6">
            
  <h4 style="text-align:center">EDITANDO PRODUCTO</h4>           
  <hr />
            <div class="card p-4 shadow-sm">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="ProductoID" class="control-label"></label>
                        <input readonly asp-for="ProductoID" class="form-control" />
                        <span asp-validation-for="ProductoID" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Nombre" class="control-label"></label>
                        <input asp-for="Nombre" class="form-control" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Precio" class="control-label"></label>
                        <input asp-for="Precio" class="form-control" />
                        <span asp-validation-for="Precio" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="FechaCreacion" class="control-label"></label>
                        <input asp-for="FechaCreacion" class="form-control" />
                        <span asp-validation-for="FechaCreacion" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary btn-sm" /> |
                        <a asp-action="Index" class="btn btn-outline-secondary btn-sm">Back to List</a>
                    </div>
                </form>
            </div>
           
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
